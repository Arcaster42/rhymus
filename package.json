{
  "dependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.0.0",
    "mocha": "^6.2.0",
    "mocha-jsdom": "^2.0.0"
  },
  "scripts": {
    "test": "npm run fetch-rhyme-dictionary && concurrently \" npm run test-unit\" \" npm run test-browser\"",
    "test-unit": "mocha ./tests/**/*-spec.js",
    "test-browser": "mocha-chrome ./tests/spec.html --reporter=Spec --ignore-exceptions",
    "fetch-rhyme-dictionary": "[ -f cmudict.0.7a ] || node_modules/rhyme-plus/data/fetch.sh"
  },
  "devDependencies": {
    "mocha-chrome": "^2.2.0",
    "rhyme-plus": "^0.0.7"
  }
}
